---
const docsImage = [
  "./images/documentations/documentation-1.webp",
  "./images/documentations/documentation-2.webp",
  "./images/documentations/documentation-3.webp",
  "./images/documentations/documentation-4.webp",
  "./images/documentations/documentation-5.webp",
  "./images/documentations/documentation-6.webp",
];
---

<div class="swiper documentation-card">
  <div class="swiper-wrapper">
    {
      docsImage.map((image) => (
        <div class="swiper-slide max-w-[240px] sm:max-w-[360px] lg:max-w-[480px] shadow-md shadow-white-base">
          <img
            src={image}
            alt="documentation s3"
            data-aos="zoom-out"
            data-aos-duration="300"
            data-aos-easing="ease-out"
            data-aos-offset="160"
            data-aos-once="true"
          />
        </div>
      ))
    }
  </div>

  <style>
    .swipper {
      width: 100%;
      padding: 50px 0;
    }

    .documentation-card {
      overflow: visible;
    }

    .swiper-slide {
      position: relative;
      aspect-ratio: 16/10;
      border-radius: 14px;
    }

    .swiper-slide img {
      display: block;
      width: 100%;
      height: 100%;
      object-fit: cover;
      border-radius: inherit;
      user-select: none;
    }
  </style>

  <script>
    import Swiper from "swiper/bundle";
    import "swiper/swiper-bundle.css";

    let documentationSwiper = new Swiper(".documentation-card", {
      effect: "coverflow",
      grabCursor: true,
      centeredSlides: true,
      initialSlide: 2,
      speed: 600,
      preventClicks: true,
      slidesPerView: "auto",
      coverflowEffect: {
        rotate: 0,
        stretch: 80,
        depth: 350,
        modifier: 1,
        slideShadows: true,
      },
      on: {
        click(params) {
          documentationSwiper.slideTo(params.clickedIndex);
        },
      },
    });
  </script>
</div>
