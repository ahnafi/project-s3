---
interface Props {
  addClass?: string;
  id?: string;
  nomor?: string;
  img: string;
  title: string;
  tugas?: string[];
}

const { addClass, id, nomor, title, tugas, img } = Astro.props;
---

<div
  id=`${id}`
  class={`flex ${addClass} justify-normal md:justify-center lg:justify-normal px-6 md:px-4 lg:px-0 gap-6 pt-12 md:pt-16 lg:pt-28`}
>
  <!-- line -->
  <span class="lg:hidden min-h-full w-2 bg-dark-base block relative">
    <span
      class="w-12 md:w-16 lg:w-28 h-12 md:h-16 lg:h-28 border-4 lg:border-8 border-dark-base rounded-full absolute -top-12 md:-top-16 lg:-top-28 -left-4 md:-left-6 lg:-left-12 -translate-x-1 flex justify-center items-center font-heading text-4xl lg:text-6xl"
      >{nomor}</span
    >
  </span>
  <!-- card -->
  <div class="flex flex-col items-center md:w-80 lg:w-[550px]">
    <div class="max-w-xs w-52">
      <img src=`${img}` alt="" class="" />
    </div>
    <div>
      <h1
        class="font-bold capitalize text-dark header-font-size my-4 font-heading text-center"
      >
        {title}
      </h1>
      <ul class="list-disc pl-6 max-w-md text-left">
        {tugas?.map((e) => <li class="normal-font-size max-w-md">{e}</li>)}
      </ul>
    </div>
  </div>
  <!-- line -->
  <span class="hidden lg:block min-h-full w-2 bg-dark-base relative">
    <span
      class="w-12 lg:w-28 h-12 lg:h-28 border-4 lg:border-8 border-dark-base rounded-full absolute -top-12 lg:-top-28 -left-4 lg:-left-12 -translate-x-1 flex justify-center items-center font-heading text-4xl lg:text-6xl"
      >{nomor}</span
    >
  </span>
  <!-- block -->
  <div class="hidden lg:block min-h-full w-[550px]"></div>
</div>
