---
interface Props {
  data: {
    img: { src: string; title?: string; list?: string[] }[];
  };
}

const { data } = Astro.props;
---

<div
  class="flex w-full flex-col justify-center md:flex-row lg:justify-around gap-2"
>
  {
    data.img.map(({ src, title, list }) => (
      <div class="mx-auto md:mx-0 animate-fade animate-once animate-duration-[800ms] animate-delay-200 animate-ease-in-out">
        <div class="max-w-md">
          <img src={src} alt={title} class="w-full rounded-md" />
        </div>
        <div class="max-w-md">
          <h2
            class="font-heading text-xl md:text-2xl lg:text-3xl text-center mb2"
            id="title"
          >
            {title}
          </h2>
          <ul class="normal-font-size pl-4 list-outsite list-disc" id="list">
            {list?.map((e) => (
              <li>{e}</li>
            ))}
          </ul>
        </div>
      </div>
    ))
  }
</div>
