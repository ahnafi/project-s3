---
const timelines = [
  {
    title: "Focus Group Discussion (FGD)",
    desc: "Focus Group Discussion (FGD) pada Soedirman Student Summit (S3) dirancang untuk memberikan pengalaman diskusi yang mendalam dan interaktif bagi para peserta. Kegiatan FGD akan membantu mahasiswa baru memahami dan terlibat dalam proses akademik dan sosial di Universitas Jenderal Soedirman.",
    img: "/images/fgd.png",
  },
  {
    title: "Lorem Ipsum",
    desc: "Lorem ipsum dolor sit amet consectetur adipisicing elit. Nostrum saepe exercitationem, esse odit quam corrupti consequatur, minus animi facilis at molestias quidem voluptatum accusamus fuga atque molestiae adipisci! Harum, quis.",
    img: "/images/cartoon/4.jpg",
  },
];
---

<div class="swiper timeline-swiper">
  <!-- Additional required wrapper -->
  <div class="swiper-wrapper">
    {timelines.map(timeline => (
        <div class="swiper-slide">
          <div class="flex flex-col items-center md:flex-row w-full gap-4 md:gap-8 px-8 md:px-16 py-8">
            <img src={timeline.img} alt={timeline.title} class="w-8/12 md:w-1/3 rounded-[24px] aspect-square object-cover" />
            <article class="flex-grow flex flex-col gap-4 lg:gap-6 text-center md:text-left">
              <h3 class="text-2xl md:text-[28px] lg:text-[32px] font-heading leading-[1.5]">{timeline.title}</h3>
              <p class="text-sm md:text-base lg:text-xl">{timeline.desc}</p>
            </article>
          </div>
        </div>
      ))
    }
  </div>
  <div class="swiper-button-next"></div>
  <div class="swiper-button-prev"></div>
  <div class="swiper-pagination"></div>
</div>

<script type="module">
  import Swiper from "https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.mjs";

  const timelineSwiper = new Swiper(".timeline-swiper", {
    grabCursor: true,
    centeredSlides: true,
    initialSlide: 0,
    speed: 600,
    preventClicks: true,
    slidesPerView: 1,
    pagination: {
      el: ".swiper-pagination",
      dynamicBullets: true,
    },
    navigation: {
      nextEl: ".swiper-button-next",
      prevEl: ".swiper-button-prev",
    },
  });
</script>
