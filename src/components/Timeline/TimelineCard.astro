---
const timelines = [
  {
    title: "Talk Show Branding",
    desc: "Talkshow Branding merupakan rangkaian acara Soedirman Student Summit (S3) yang bertujuan untuk memberikan wawasan dan mengenalkan berbagai macam fakultas serta Unit Kegiatan Mahasiswa (UKM) yang ada di Universitas Jenderal Soedirman.",
    img: "/images/documentations/documentation-1.webp",
  },
  {
    title: "Forum Group Discussion",
    desc: "Focus Group Discussion (FGD) merupakan salah satu rangkaian acara Soedirman Student Summit (S3) yang memfasilitasi  mahasiswa baru dalam berdiskusi, berbagi pendapat dan pengalaman, saling mengenal, disertai penyampaian informasi yang dilakukan dengan sistem diskusi kelompok yang sistematis.",
    img: "/images/documentations/documentation-2.webp",
  },
  {
    title: "Penugasan",
    desc: "Penugasan merupakan rangkain acara Soedirman Student Summit yang dirancang untuk memberikan fondasi yang kuat bagi mahasiswa baru dalam menjalani kehidupan akademik dan sosial di lingkungan kampus.",
    img: "/images/documentations/documentation-3.webp",
  },
  {
    title: "D-Day of S3",
    desc: "D-Day of S3 merupakan seluruh rangkaian kegiatan yang akan dilaksanakan pada hari-H Soedirman Student Summit (S3) yang meliputi Sidang Senat, Talkshow hingga malam puncak yang akan menandakan selesainya seluruh rangkaian Soedirman Student Summit (S3).",
    img: "/images/documentations/documentation-4.webp",
  },
];
---

<div class="swiper timeline-swiper">
  <!-- Additional required wrapper -->
  <div class="swiper-wrapper">
    {
      timelines.map((timeline) => (
        <div class="swiper-slide">
          <div class="flex flex-col items-center md:flex-row w-full">
            <img
              src={timeline.img}
              alt={timeline.title}
              class="w-full md:w-1/3 aspect-square object-cover"
              data-aos="fade-right"
              data-aos-duration="600"
              data-aos-delay="100"
              data-aos-easing="ease-in-out"
              data-aos-offset="300"
              data-aos-once="true"
            />
            <article
              class="flex-grow flex flex-col lg:gap-6 px-2 md:px-4 pt-2 md:pt-0"
              data-aos="fade-left"
              data-aos-duration="600"
              data-aos-delay="100"
              data-aos-easing="ease-in-out"
              data-aos-offset="300"
              data-aos-once="true"
            >
              <h3 class="sub-header-font-size font-heading leading-[1.5] text-center md:text-left">
                {timeline.title}
              </h3>
              <p class="normal-font-size text-justify">{timeline.desc}</p>
            </article>
          </div>
        </div>
      ))
    }
  </div>
  <div class="swiper-pagination"></div>
  <div class="swiper-button-next text-yellow-base"></div>
  <div class="swiper-button-prev text-yellow-base"></div>
</div>
<style>
  .swiper-button-next,
  .swiper-button-prev {
    color: #facc15;
  }
</style>
<script>
  import Swiper from "swiper";
  import "swiper/swiper-bundle.css";

  const timelineSwiper = new Swiper(".timeline-swiper", {
    grabCursor: true,
    centeredSlides: true,
    initialSlide: 0,
    speed: 600,
    preventClicks: true,
    slidesPerView: 1,
    pagination: {
      el: ".swiper-pagination",
      dynamicBullets: true,
    },
    navigation: {
      nextEl: ".swiper-button-next",
      prevEl: ".swiper-button-prev",
    },
  });
  console.log(timelineSwiper.realIndex);
</script>
