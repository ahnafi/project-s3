---
interface Props {
  id: string;
  title: string;
  link: string;
}

const { id, link, title } = Astro.props;
---

<section
  id={id}
  class="pt-8 pb-8 lg:pt-16 lg:pb-16 section-padding-x relative text-dark-base"
>
  <div class="absolute inset-0 bg-transparent bg-gradient-to-b"></div>
  <div class="relative container max-w-screen-xl">
    <div
      class="flex flex-col-reverse gap-8 md:flex-row-reverse justify-between items-center"
    >
      <div
        class="md:w-1/3"
        data-aos="fade-left"
        data-aos-duration="600"
        data-aos-delay=""
        data-aos-easing="ease-out"
        data-aos-offset="300"
        data-aos-once="true"
      >
        <h2
          class="font-heading font-semibold mb-2 capitalize header-font-size text-center md:text-left"
        >
          {title}
        </h2>
      </div>
      <div
        class="w-full md:w-1/2"
        data-aos="fade-right"
        data-aos-duration="600"
        data-aos-delay=""
        data-aos-easing="ease-out"
        data-aos-offset="300"
        data-aos-once="true"
      >
        <iframe
          class="w-full max-w-2xl aspect-video rounded-lg drop-shadow-[0_0px_5px]"
          src={link}
          title={title}
          allow="accelerometer; encrypted-media; web-share"
          referrerpolicy="strict-origin-when-cross-origin"
          allowfullscreen
        >
        </iframe>
      </div>
    </div>
  </div>
</section>
