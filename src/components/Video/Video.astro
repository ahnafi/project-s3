---
interface Props {
  id: string;
  title: string;
  desc: string;
  link: string;
}

const { id, link, title, desc } = Astro.props;
---

<section id={id} class="pt-16 pb-16 px-4 bg-white-base text-dark-base">
  <div class="container max-w-screen-xl">
    <div
      class="flex flex-col-reverse gap-8 md:flex-row-reverse justify-between items-center"
    >
      <div class="md:w-1/3">
        <h2
          class="font-heading font-bold mb-2 capitalize text-3xl sm:text-4xl lg:text-5xl text-dark-base text-center md:text-left"
        >
          {title}
        </h2>
        <p class="text-sm sm:text-base text-center md:text-left">
          {desc}
        </p>
      </div>
      <div class="w-full md:w-1/2">
        <iframe
          class="w-full max-w-2xl aspect-video rounded-lg drop-shadow-[0_0px_5px]"
          src={link}
          title="#Flashback Soedirman Student Summit"
          allow="accelerometer; encrypted-media; web-share"
          referrerpolicy="strict-origin-when-cross-origin"
          allowfullscreen
        >
        </iframe>
      </div>
    </div>
  </div>
</section>
