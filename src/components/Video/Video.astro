---
interface Props {
  id: string;
  title: string;
  link: string;
}

const { id, link, title } = Astro.props;
---

<!-- images/pattern/soedirman-student-summit.png -->
<section
  id={id}
  class="pt-8 pb-8 lg:pt-16 lg:pb-16 section-padding-x relative text-dark-base"
>
  <div
    class="absolute inset-0 bg-transparent from-white-base/10 via-dark-base/80 to-dark-base/100 bg-gradient-to-b"
  >
  </div>
  <div class="relative container max-w-screen-xl">
    <div
      class="flex flex-col-reverse gap-8 md:flex-row-reverse justify-between items-center"
    >
      <div class="md:w-1/3">
        <h2
          class="font-heading font-semibold mb-2 capitalize header-font-size text-white-base text-center md:text-left"
        >
          {title}
        </h2>
      </div>
      <div class="w-full md:w-1/2">
        <iframe
          class="w-full max-w-2xl aspect-video rounded-lg drop-shadow-[0_0px_5px]"
          src={link}
          title={title}
          allow="accelerometer; encrypted-media; web-share"
          referrerpolicy="strict-origin-when-cross-origin"
          allowfullscreen
        >
        </iframe>
      </div>
    </div>
  </div>
</section>
