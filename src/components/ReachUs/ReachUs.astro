---
const email: string[] = ["hello@loopple.com", "unsoed@mhs.unsoed.ac.id"];
const instagram: { name: string; link: string }[] = [
  {
    name: "@soedirmanstudentsummit",
    link: "https://www.instagram.com/soedirmanstudentsummit",
  },
  {
    name: "@batir_unsoed",
    link: "https://www.instagram.com/batir_unsoed",
  },
  {
    name: "@bem_unsoed",
    link: "https://www.instagram.com/bem_unsoed",
  },
];
---

<section
  id="reach-us"
  class="pt-32 pb-16 section-padding-x text-dark-base m-auto"
>
  <div class="container max-w-screen-xl">
    <div class="w-full px-4">
      <div class="max-w-xl mx-auto text-center mb-16">
        <h2
          class="font-bold capitalize text-dark header-font-size mb-4 font-heading"
        >
          Punya pertanyaan atau butuh bantuan?
        </h2>
      </div>
    </div>
    <div class="w-full px-4 flex gap-10">
      <div class="container flex flex-col mx-auto">
        <div
          class="grid w-full grid-cols-1 content-center gap-5 md:grid-cols-2 lg:grid-cols-2"
        >
          <div
            class="flex gap-3 bg-white border border-gray-300 rounded-xl overflow-hidden items-center justify-start px-4 py-2 flex-col lg:flex-row"
          >
            <div
              class="w-32 h-32 flex-shrink-0 flex justify-center items-center"
            >
              <i class="fa-solid fa-envelope fa-8x text-yellow-base"></i>
            </div>

            <div class="flex flex-col gap-2 py-2">
              <h5 class="text-xl font-bold">Email</h5>

              <p class="text-gray-500">Hubungi kami lewat email</p>

              {
                email.map((mail, index) => (
                  <span class="flex items-center justify-start text-gray-500 hover:text-blue-base hover:underline transition-all ease-in-out duration-300">
                    <svg
                      class="w-4 h-4 mr-1 mt-1"
                      fill="currentColor"
                      viewBox="0 0 20 20"
                      xmlns="http://www.w3.org/2000/svg"
                    >
                      <path
                        fill-rule="evenodd"
                        d="M12.586 4.586a2 2 0 112.828 2.828l-3 3a2 2 0 01-2.828 0 1 1 0 00-1.414 1.414 4 4 0 005.656 0l3-3a4 4 0 00-5.656-5.656l-1.5 1.5a1 1 0 101.414 1.414l1.5-1.5zm-5 5a2 2 0 012.828 0 1 1 0 101.414-1.414 4 4 0 00-5.656 0l-3 3a4 4 0 105.656 5.656l1.5-1.5a1 1 0 10-1.414-1.414l-1.5 1.5a2 2 0 11-2.828-2.828l3-3z"
                        clip-rule="evenodd"
                      />
                    </svg>
                    <a href={`mailto: ${mail}`} target="_blank">
                      {mail}
                    </a>
                  </span>
                ))
              }
            </div>
          </div>
          <!--  -->
          <div
            class="flex gap-3 bg-white border border-gray-300 rounded-xl overflow-hidden items-center justify-start px-4  py-2 flex-col lg:flex-row"
          >
            <div
              class="w-32 h-32 flex-shrink-0 flex justify-center items-center"
            >
              <i class="fa-brands fa-instagram fa-8x text-yellow-base"></i>
            </div>

            <div class="flex flex-col gap-2 py-2">
              <h5 class="text-xl font-bold">Instagram</h5>

              <p class="text-gray-500">Hubungi kami lewat Instagram</p>

              {
                instagram.map((e, index) => (
                  <span class="flex items-center justify-start text-gray-500 hover:text-blue-base hover:underline  transition-all ease-in-out duration-150">
                    <svg
                      class="w-4 h-4 mr-1 mt-1"
                      fill="currentColor"
                      viewBox="0 0 20 20"
                      xmlns="http://www.w3.org/2000/svg"
                    >
                      <path
                        fill-rule="evenodd"
                        d="M12.586 4.586a2 2 0 112.828 2.828l-3 3a2 2 0 01-2.828 0 1 1 0 00-1.414 1.414 4 4 0 005.656 0l3-3a4 4 0 00-5.656-5.656l-1.5 1.5a1 1 0 101.414 1.414l1.5-1.5zm-5 5a2 2 0 012.828 0 1 1 0 101.414-1.414 4 4 0 00-5.656 0l-3 3a4 4 0 105.656 5.656l1.5-1.5a1 1 0 10-1.414-1.414l-1.5 1.5a2 2 0 11-2.828-2.828l3-3z"
                        clip-rule="evenodd"
                      />
                    </svg>
                    <a href={e.link} target="_blank">
                      {e.name}
                    </a>
                  </span>
                ))
              }
            </div>
          </div>

          <!--  -->
        </div>
      </div>
    </div>
  </div>
</section>
