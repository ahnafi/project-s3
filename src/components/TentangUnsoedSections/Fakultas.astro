---
import RagamSwiper from "../Swiper/RagamSwiper.astro";
import { dataFakultas } from "../../data/data-fakultas";
---

<section
  id="visi-misi"
  class="pt-8 pb-8 lg:pt-16 lg:pb-16 section-padding-x bg-white-base text-dark-base"
>
  <div class="container max-w-screen-xl">
    <div class="flex flex-col gap-4 md:gap-8">
      <div class="max-w-screen-md mx-auto text-center">
        <h2
          class="font-heading font-semibold capitalize header-font-size mb-2"
          data-aos="fade-down"
          data-aos-duration="600"
          data-aos-delay="100"
          data-aos-easing="ease-in-out"
          data-aos-offset="200"
          data-aos-once="true"
        >
          Fakultas Unsoed
        </h2>
      </div>
      <div class="max-h-96 md:max-h-80 flex overflow-hidden h-96 md:h-80 w-full">
        <RagamSwiper ragamInfo={dataFakultas} />
      </div>
    </div>
  </div>
</section>
