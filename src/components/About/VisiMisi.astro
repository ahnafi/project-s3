---

<section
  id="visi-misi"
  class="pt-8 pb-8 lg:pt-16 lg:pb-16 section-padding-x bg-dark-base text-white-base"
>
  <div class="container max-w-screen-xl">
    <div
      class="flex flex-wrap gap-4 md:gap-8"
      data-aos="slide-up"
      data-aos-duration="600"
      data-aos-easing="ease-out"
      data-aos-offset="100"
      data-aos-once="true"
    >
      <div
        class="m-auto flex flex-wrap justify-center flex-col md:flex-row gap-4 md:gap-0"
      >
        <div
          class="w-full flex-1 flex flex-col gap-1 md:gap-2 items-center"
          data-aos="fade-up-right"
          data-aos-duration="900"
          data-aos-delay="300"
          data-aos-easing="ease-out"
          data-aos-offset="250"
          data-aos-once="true"
        >
          <h2 class="font-heading text-center sub-header-font-size max-w-md">
            Visi
          </h2>
          <p class="normal-font-size text-justify">
            {visi}
          </p>
        </div>
        <div
          class="min-h-full min-w-2 mx-4 bg-white-base rounded-md hidden md:block"
        >
        </div>
        <div
          class="w-full flex-1 flex flex-col gap-1 md:gap-2 items-center"
          data-aos="fade-up-left"
          data-aos-duration="900"
          data-aos-delay="300"
          data-aos-easing="ease-out"
          data-aos-offset="250"
          data-aos-once="true"
        >
          <h2 class="font-heading text-center sub-header-font-size max-w-md">
            Misi
          </h2>
          <ol class="list-decimal text-justify normal-font-size pl-4">
            {misi.map((data) => <li>{data}</li>)}
          </ol>
        </div>
      </div>
    </div>
  </div>
