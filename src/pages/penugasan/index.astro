---
import Layout from "../../layouts/Layout.astro";
---

<Layout title="Penugasan">
  <section id="hero" class="pt-32 section-padding-x text-dark-base">
    <div class="container max-w-screen-xl">
      <div class="flex justify-center items-center">
        <h1
          class="font-heading header-font-size text-center"
          data-aos="slide-down"
          data-aos-duration="400"
          data-aos-delay=""
          data-aos-easing="ease-in-out"
          data-aos-offset="0"
          data-aos-once="true"
        >
          INFO PENUGASAN
        </h1>
      </div>
      <div
        class="my-8 sm:my-10 flex flex-col md:flex-row justify-center items-center md:gap-8 gap-4 p-6"
      >
        <div
          class="flex flex-col justify-center md:max-w-md"
          data-aos="fade-right"
          data-aos-duration="400"
          data-aos-delay="100"
          data-aos-easing="ease-in-out"
          data-aos-offset="0"
          data-aos-once="true"
        >
          <div
            class="flex flex-col h-full shadow justify-between rounded-lg pb-8 p-6 xl:p-8 mt-3 bg-white"
          >
            <div>
              <h4
                class="font-bold text-2xl md:text-3xl lg:text-4xl font-heading"
              >
                SNBP & SNBT
              </h4>
              <div class="my-4">
                <p>Info terkait penugasan bagi gensoed jalur SNBP dan SNBT</p>
              </div>
            </div>
            <div>
              <a
                class="text-dark-base font-semibold rounded-md inline-flex items-center md:mb-2 lg:mb-0 text-xs sm:text-sm md:text-base hover:before:bg-redborder-red-500 relative overflow-hidden border border-dark-base bg-white px-4 py-1 shadow-2xl transition-all before:absolute before:bottom-0 before:left-0 before:top-0 before:z-0 before:h-full before:w-0 before:bg-blue-base before:transition-all before:duration-500 hover:border-blue-base hover:text-white-base hover:before:left-0 hover:before:w-full"
                href="/coming-soon"
              >
                <span class="relative z-10">Cek Penugasan</span>
                <svg
                  class="w-4 h-4 ml-2 relative z-10"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                  stroke-width="2"
                  fill="none"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                >
                  <path d="M5 12h14"></path>
                  <path d="M12 5l7 7-7 7"></path>
                </svg>
              </a>
            </div>
          </div>
        </div>
        <div
          class="flex flex-col justify-center md:max-w-md"
          data-aos="fade-left"
          data-aos-duration="400"
          data-aos-delay="100"
          data-aos-easing="ease-in-out"
          data-aos-offset="0"
          data-aos-once="true"
        >
          <div
            class="flex flex-col h-full shadow justify-between rounded-lg pb-8 p-6 xl:p-8 mt-3 bg-white"
          >
            <div>
              <h4
                class="font-bold text-2xl md:text-3xl lg:text-4xl font-heading"
              >
                MANDIRI
              </h4>
              <div class="my-4">
                <p>Info terkait penugasan bagi gensoed jalur MANDIRI</p>
              </div>
            </div>
            <div>
              <a
                class="text-dark-base font-semibold rounded-md inline-flex items-center md:mb-2 lg:mb-0 text-xs sm:text-sm md:text-base hover:before:bg-redborder-red-500 relative overflow-hidden border border-dark-base bg-white px-4 py-1 shadow-2xl transition-all before:absolute before:bottom-0 before:left-0 before:top-0 before:z-0 before:h-full before:w-0 before:bg-blue-base before:transition-all before:duration-500 hover:border-blue-base hover:text-white-base hover:before:left-0 hover:before:w-full"
                href="/coming-soon"
              >
                <span class="relative z-10">Cek Penugasan</span>
                <svg
                  class="w-4 h-4 ml-2 relative z-10"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                  stroke-width="2"
                  fill="none"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                >
                  <path d="M5 12h14"></path>
                  <path d="M12 5l7 7-7 7"></path>
                </svg>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
