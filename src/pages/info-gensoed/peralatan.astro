---
import Layout from "../../layouts/Layout.astro";

interface Ketentuan {
  src: string;
  title?: string;
  list: string[];
}

const peralatan: Ketentuan = {
  src: "/images/peralatan.webp",
  title: "Peralatan Yang Harus Dibawa",
  list: [
    "ID Card yang telah disediakan.",
    "Alat tulis (pena, pensil, dan buku catatan).",
    "Air minum pribadi.",
    "Payung, ponco, atau jas hujan.",
    "Obat-obatan pribadi.",
    "Alat sholat (mukena, sajadah, dan perlengkapan sholat lainnya).",
    "Botol 1,5 liter berisi air untuk berwudhu.",
    "Sandal.",
  ],
};
---

<Layout
  title="Peralatan"
  addClass="bg-[url('/images/patterns/batik.svg')] bg-size text-dark-base"
>
  <section class="py-32 section-padding-x min-h-[100vh]">
    <div
      class="text-center md:text-left mb-4 md:bg-gradient-to-r bg-sky-400 md:from-sky-400 md:to-transparent p-2 md:p-4 rounded-3xl animate-fade-up animate-once animate-duration-[600ms] animate-ease-in-out"
    >
      <h1 class="capitalize font-heading header-font-size text-white-base">
        Peralatan
      </h1>
    </div>
    <div class="flex flex-col-reverse md:flex-row gap-4">
      <div
        class="max-w-md lg:w-3/5 lg:max-w-[unset] mx-auto normal-font-size md:mx-0 animate-fade-right animate-once animate-duration-[800ms] animate-delay-200 animate-ease-in-out"
      >
        <h2 class="font-heading text-2xl md:text-3xl lg:text-4xl">
          {peralatan.title}
        </h2>
        <ul class="pl-4">
          {
            peralatan.list.map((e) => (
              <li class="normal-font-size list-outside list-decimal">{e}</li>
            ))
          }
        </ul>
      </div>
      <div
        class="max-w-sm lg:w-2/5 lg:max-w-[unset] mx-auto md:ml-auto animate-fade-left animate-once animate-duration-[800ms] animate-delay-100 animate-ease-in-out"
      >
        <img
          src={peralatan.src}
          alt={"photo" + peralatan.title}
          class="w-full rounded-md"
        />
      </div>
    </div>
    <!--  -->
  </section>
</Layout>
